<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
    android:layoutDirection="ltr"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/History_of_StudentSer"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_circle_1"
            android:orientation="vertical"
            android:padding="10dp"
            >
            <TextView
                android:id="@+id/status_attendance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textAlignment="viewEnd"
                android:fontFamily="@font/cairoextrabold"
                android:layout_marginBottom="10dp"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/session_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textAlignment="viewEnd"
                android:fontFamily="@font/cairoextrabold"
                android:layout_marginBottom="10dp"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/student_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textAlignment="viewEnd"
                android:fontFamily="@font/cairoextrabold"
                android:layout_marginBottom="10dp"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/prof_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textAlignment="viewEnd"
                android:fontFamily="@font/cairoextrabold"
                android:layout_marginBottom="10dp"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/scanned_at"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textAlignment="viewEnd"
                android:fontFamily="@font/cairoextrabold"
                android:layout_marginBottom="10dp"
                android:textColor="@color/black"/>


        </LinearLayout>
    </LinearLayout>